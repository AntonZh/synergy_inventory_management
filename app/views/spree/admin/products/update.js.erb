$('#product_<%= @object.id%> form a').html('<%= @object.active? ? link_to (image_tag("admin/icons/light-bulb.png"), "javascript:void(0);", :class => "change-availability", :title => t("sim.published_hide")) : link_to (image_tag("admin/icons/light-bulb-off.png"), "javascript:void(0);", :class => "change-availability", :title => t("sim.unpublished_show")) %>');
